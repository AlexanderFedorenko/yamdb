= form_for @movie_image do |f|
  - if @movie_image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@movie_image.errors.count, "error")} prohibited this movie_image from being saved:"
      %ul
        - @movie_image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :movie_id
    = f.number_field :movie_id
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
