= form_for @movie, html: {multipart: true} do |f|
  - if @movie.errors.any?
    #error_explanation
      %h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
      %ul
        - @movie.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :director
    = f.text_field :director
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :cover
    = f.file_field :cover

  = f.fields_for :movie_images do |image|
    .field
      = image.label :image
      = image.file_field :image, multiple: true, name: "movie_images[image][]"

  .actions
    = f.submit 'Save'
